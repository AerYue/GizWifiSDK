<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/device_topBar"
            android:layout_height="?attr/qmui_topbar_height"
            android:layout_width="match_parent"
            app:qmui_topbar_title_color="@color/app_color_white"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ToggleButton
                android:id="@+id/led_1_1"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
                android:textOn="@string/status_led_on"
                android:textOff="@string/status_led_off"
                />
            <ToggleButton
                android:id="@+id/led_1_2"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
                android:textOn="@string/status_led_on"
                android:textOff="@string/status_led_off"
                />
            <ToggleButton
                android:id="@+id/led_1_3"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:layout_margin="1dp"
            android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
            android:textOn="@string/status_led_on"
            android:textOff="@string/status_led_off"
            />
            <ToggleButton
                android:id="@+id/led_1_4"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:layout_margin="1dp"
            android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
            android:textOn="@string/status_led_on"
            android:textOff="@string/status_led_off"
            />
            <ToggleButton
                android:id="@+id/led_1_5"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:layout_margin="1dp"
            android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
            android:textOn="@string/status_led_on"
            android:textOff="@string/status_led_off"
            />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ToggleButton
                android:id="@+id/led_2_1"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
                android:textOn="@string/status_led_on"
                android:textOff="@string/status_led_off"
                />
            <ToggleButton
                android:id="@+id/led_2_2"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
                android:textOn="@string/status_led_on"
                android:textOff="@string/status_led_off"
                />
            <ToggleButton
                android:id="@+id/led_2_3"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
                android:textOn="@string/status_led_on"
                android:textOff="@string/status_led_off"
                />
            <ToggleButton
                android:id="@+id/led_2_4"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
                android:textOn="@string/status_led_on"
                android:textOff="@string/status_led_off"
                />
            <ToggleButton
                android:id="@+id/led_2_5"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bg_led_close_button"
                android:textColor="@color/app_color_white"
                android:textOn="@string/status_led_on"
                android:textOff="@string/status_led_off"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>